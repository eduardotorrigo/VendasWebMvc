@model IEnumerable<VendasWebMvc.Models.Seller>
@{
    ViewData["Title"] = "Vendedores";
}
<h2>@ViewData["Title"]</h2>
<p> <a asp-action="Create" class="btn btn-secondary">Criar Novo</a> </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItens => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItens => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItens => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItens => item.BaseSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItens => item.Department.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Detalhe</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>